<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="date"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/editTextSum" />

    <Button
        android:id="@+id/buttonToday"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:text="Сегодня"
        android:textSize="10dp"
        android:onClick="setButtonToday"
        android:layout_below="@+id/editTextDate"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Введите данные за день" />

    <EditText
        android:id="@+id/editTextSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextSum"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:text="Сумма" />

    <Button
        android:id="@+id/buttonYesterday"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:text="Вчера"
        android:textSize="10dp"
        android:onClick="setButtonYesterday"
        android:layout_below="@+id/editTextDate"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Внести данные "
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />

    <EditText
        android:id="@+id/editTextBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonSave"
        android:layout_alignStart="@+id/editTextSum"
        android:layout_marginBottom="34dp"
        android:visibility="invisible"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textViewBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextBank"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:text="Банк"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonNext"

        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_below="@+id/editTextSum"
        android:layout_centerHorizontal="true"
        android:text="продолжить"
        android:textSize="10dp" />


</RelativeLayout>


