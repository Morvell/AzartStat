<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ru.azsoftware.azartstat.SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <Button
        android:id="@+id/buttonDeleteDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Удалить всю базу данных"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewCorectionBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonDeleteDB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="Банк на данный момент" />

    <EditText
        android:id="@+id/editTextEditBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCorectionBank"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="number"
        android:text="0" />

    <Button
        android:id="@+id/buttonEditBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextEditBank"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="Изменить банк" />

</RelativeLayout>
